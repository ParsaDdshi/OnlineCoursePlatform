@page
@model OnlineCoursePlatform.Web.Pages.Admin.Roles.DeletedRoleListModel
@{
    ViewData["Title"] =  "نقش های حذف شده";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقش های حذف شده</h1>
    </div>
</div>


<div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
    <div>
        <a asp-page="CreateRole" class="btn btn-outline btn-success">افزودن نقش جدید</a>
    </div>
    <br />
    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
    <thead>
        <tr>
            <th>عنوان نقش</th>
        </tr>                             
    </thead>
    <tbody>
            @foreach (var item in Model.RolesList)
            {
                    <tr>
                        <th>@item.RoleTitle</th>
                    </tr>
            }
        </tbody>
    </table>
</div>
