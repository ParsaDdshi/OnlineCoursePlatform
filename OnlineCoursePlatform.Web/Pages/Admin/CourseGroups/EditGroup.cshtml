@page "{id}"
@model OnlineCoursePlatform.Web.Pages.Admin.CourseGroups.EditGroupModel
@{
    ViewData["Title"] = "ویرایش گروه";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن گروه جدید</h1>
    </div>
</div>

<div class="row">
    <form method="post">
        <input type="hidden" asp-for="Group.ParentId" />
        <input type="hidden" asp-for="Group.GroupId" />
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    نقش
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان گروه</label>
                        <input type="text" asp-for="Group.GroupTitle" class="form-control" />
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>
