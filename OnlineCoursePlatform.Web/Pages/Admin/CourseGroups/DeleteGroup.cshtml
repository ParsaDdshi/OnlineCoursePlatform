@page "{id}"
@model OnlineCoursePlatform.Web.Pages.Admin.CourseGroups.DeleteGroupModel
@{
    ViewData["Title"] = "حذف گروه ";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">حذف قسمت</h1>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="@Model.Group.GroupId" />
    <div class="alert alert-danger">
        آیا از حذف قسمت "@Model.Group.GroupTitle" مطمئن هستید؟
    </div>

    <input type="submit" class="btn btn-danger" value="حذف" />
</form>
