@page
@model OnlineCoursePlatform.Web.Pages.Admin.CourseGroups.DeletedGroupsListModel
@{
    ViewData["Title"] = "گروه های حذف شده";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست گروه های حذف شده</h1>
    </div>
</div>


<div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
        <thead>
            <tr>
                <th>نام گروه</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CourseGroups)
            {
                <tr>
                    <td>@item.GroupTitle</td>
                </tr>
            }
        </tbody>
    </table>
</div>