@page "{id}"
@model OnlineCoursePlatform.Web.Pages.Admin.Discounts.DeleteDiscountModel
@{
    ViewData["Title"] = "حذف کد تخفیف";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">حذف کد تخفیف </h1>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Discount.DiscountId"/>
    <div class="alert alert-danger">
        آیا از حذف کد تخفیف "@Model.Discount.DiscountCode" مطمئن هستید؟  
    </div>

    <input type="submit" class="btn btn-danger" value="حذف" />
</form>