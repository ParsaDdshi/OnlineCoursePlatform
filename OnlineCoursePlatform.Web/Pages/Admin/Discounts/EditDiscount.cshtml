@page "{id}"
@model OnlineCoursePlatform.Web.Pages.Admin.Discounts.EditDiscountModel
@{
    ViewData["Title"] = "ویرایش کد تخفیف";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش کد تخفیف </h1>
    </div>
</div>

<div class="row">
    <form method="post">
        <input type="hidden" asp-for="Discount.DiscountId"/>
        <div class="form-group">
            <label>کد تخفیف</label>
            <input type="text" asp-for="Discount.DiscountCode" class="form-control"/>
        </div>
        <div class="form-group">
            <label>درصد تخفیف</label>
            <input type="number" asp-for="Discount.Percent" class="form-control" />
        </div>
        <div class="form-group">
            <label>تعداد استفاده از کد تخفیف</label>
            <input type="text" asp-for="Discount.UsableCount" class="form-control" />
        </div>
        <div class="form-group">
            <label>تاریخ شروع</label>
            <input name="startDate" id="startDate" value="@((Model.Discount.StartDate != null)?
            Model.Discount.StartDate.Value.ToShamsi():"")" />
        </div>
        <div class="form-group">
            <label>تاریخ پایان</label>
            <input name="endDate" id="endDate" value="@((Model.Discount.EndDate != null)?
            Model.Discount.EndDate.Value.ToShamsi():"")" />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="submit" class="btn btn-success" value="ذخیره اطلاعات" />
    </form>

</div>

@section Scripts{
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.default.min.css" rel="stylesheet" />
    <script src="/js/kendo.all.min.js"></script>
    <script>
        $("#startDate").kendoDatePicker();
        $("#endDate").kendoDatePicker();
    </script>
}
