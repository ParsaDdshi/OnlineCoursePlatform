@page
@model OnlineCoursePlatform.Web.Pages.Admin.Discounts.DeletedDiscountCodesModel
@{
    ViewData["Title"] = "کدهای تخفیف حذف شده";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کدهای تخفیف حذف شده</h1>
    </div>
</div>


<div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
        <thead>
            <tr>
                <th>کد تخفیف</th>
                <th>درصد تخفیف</th>
                <th>تعداد</th>
                <th>تاریخ شروع</th>
                <th>تاریخ پایان</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DeletedDiscounts.Discounts)
            {
                <tr>
                    <td>@item.DiscountCode</td>
                    <td>@item.Percent</td>
                    <td>@item.UsableCount</td>
                    <td>@item.StartDate?.ToShamsi()</td>
                    <td>@item.EndDate?.ToShamsi()</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div class="col-sm-6">
            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.DeletedDiscounts.PageCount; i++)
                    {
                        <li class="paginate_button @((i==Model.DeletedDiscounts.CurrentPage) ? "active" : "")" aria-controls="dataTables-example" tabindex="0">
                            <a href="/Admin/Discounts/DeletedDiscountCodes?pageId=@i">@i</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>