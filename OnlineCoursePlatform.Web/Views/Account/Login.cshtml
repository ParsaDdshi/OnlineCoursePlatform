@model LoginViewModel
@{
    ViewData["Title"] = "ورود به سایت";
}

<div class="container">
    <nav aria-label="breadcrumb">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">پلتفرم دوره های آنلاین</a></li>
        <li class="breadcrumb-item active" aria-current="page">ورود به سایت</li>
      </ul>
    </nav>
</div>

<main class="client-page">
    <div class="container-content">
        @if (ViewBag.EditProfile == true)
        {
            <div class="alert alert-warning">
                به دلیل ویرایش پروفایل و بارگزاری مجدد اطلاعات لطفا مجددا لاگین کنید.
            </div>            
        }

        <header><h2> ورود به سایت </h2></header>

        <div class="form-layer">

            <form asp-action="Login" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="remember-me">
                    <input asp-for="RememberMe" type="checkbox">  مرا بخاطر بسپار
                </div>

                <div class="link">
                    <a asp-controller="Account" asp-action="ForgetPassword"> <i class="zmdi zmdi-lock"></i> رمز عبور خود را فراموش کرده ام !</a>
                    <a asp-controller="Account" asp-action="Register"> <i class="zmdi zmdi-account"></i> عضویت در سایت </a>
                </div>

                <button class="btn btn-success"> ورود به سایت </button>

            </form>
        </div>

    </div>
</main>